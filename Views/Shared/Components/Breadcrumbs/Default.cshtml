@using BootstrapViewComponentsRazorLibrary.Models.bootstrap

@model List<BreadcrumbItemModel>

@if (Model.Count > 0)
{
    Model[Model.Count - 1].href = null;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @foreach (BreadcrumbItemModel item in Model)
        {
            bool this_is_current_page = string.IsNullOrEmpty(item.href);
            if (this_is_current_page)
            {
                @:<li class="breadcrumb-item active" aria-current="page">@item.text</li>
            }
            else
            {
                @:<li class="breadcrumb-item"><a href="@item.href">@item.text</a></li>
            }
        }
    </ol>
</nav>