@using BootstrapViewComponentsRazorLibrary.Service.html
@using BootstrapViewComponentsRazorLibrary.Service.html.input
@model AbstractInputManager
@if (Model is TextareaManager)
{
    TextareaManager textarea = Model as TextareaManager;
    <textarea @Html.Raw(textarea.GetStringAttributes())>@textarea.Value</textarea>
}
else
{
    <input @Html.Raw(Model.GetStringAttributes()) />
}