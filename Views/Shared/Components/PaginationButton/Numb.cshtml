@using BootstrapViewComponentsRazorLibrary.Models.bootstrap

@model PaginationButtonModel

@{
    string li_css = "page-item";
    if (Model.IsActive)
    {
        li_css += " active";
    }
}

<li class="@li_css">
    @if (Model.IsActive || string.IsNullOrEmpty(Model.Href))
    {
        <a class="page-link">
            @Model.Title
        </a>
    }
    else
    {
        <a class="page-link" href="@Model.Href">
            @Model.Title
        </a>
    }
</li>