@using BootstrapViewComponentsRazorLibrary.Service.bootstrap.forms
@using BootstrapViewComponentsRazorLibrary.Service.bootstrap.input
@using BootstrapViewComponentsRazorLibrary.Models.bootstrap
@model FormGroupHorizontalStackedManager
<fieldset class="form-group">
    <div class="row">
        <legend class="col-form-label col-sm-2 pt-0">@Model.HeaderInputsGroup</legend>
        <div class="col-sm-10">
            @foreach (CustomInputModel v in Model.CustomInputs)
            {
                await Html.RenderPartialAsync("StackedInput", new StackedInputModel() { CustomInput = v, IsInline = Model.IsInline });
            }
        </div>
    </div>
</fieldset>