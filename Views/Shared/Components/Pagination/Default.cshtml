@using BootstrapViewComponents
@using BootstrapViewComponentsRazorLibrary.Models.bootstrap

@model PaginationManager

<nav aria-label="Page navigation">
    @{
        string ul_css = "";

        if (Model.SiziePagination == BootstrapSizingEnum.Lg)
        {
            ul_css = "pagination-lg";
        }
        else if (Model.SiziePagination == BootstrapSizingEnum.Sm)
        {
            ul_css = "pagination-sm";
        }


        if (Model.AlignmentPagination == AlignmentEnumModel.center)
        {
            ul_css += " justify-content-center";
        }
        else if (Model.AlignmentPagination == AlignmentEnumModel.right)
        {
            ul_css += " justify-content-end";
        }
    }
    <ul class="pagination @ul_css">
        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Back, Title = "Назад", Href = (Model.PageNum <= 1 ? string.Empty : Model.UrlTmpl + (Model.PageNum - 1)) } })
        @for (int i = 1; Model.CountPages >= i; i++)
        {
            if (Model.CountPages > 7)
            {
                if (Model.PageNum < 5)
                {
                    if (i == Model.CountPages - 1)
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Separator, Title = "⁞" } });
                    }
                    else if (i <= 5 || i == Model.CountPages)
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Numb, Title = i.ToString(), Href = Model.UrlTmpl + i.ToString(), IsActive = (Model.PageNum == i) } });
                    }
                    else
                    {
                        continue;
                    }
                }
                else if (Model.PageNum > (Model.CountPages - 4))
                {
                    if (i == 2)
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Separator, Title = "⁞" } });
                    }
                    else if (i == 1 || i >= (Model.CountPages - 4))
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Numb, Title = i.ToString(), Href = Model.UrlTmpl + i.ToString(), IsActive = (Model.PageNum == i) } });
                    }
                    else
                    {
                        continue;
                    }
                }
                else
                {
                    if (i == 2 || i == Model.CountPages - 1)
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Separator, Title = "⁞" } });
                    }
                    else if ((i == 1 || i == Model.CountPages) || (i == Model.PageNum - 1 || i == Model.PageNum || i == Model.PageNum + 1))
                    {
                        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Numb, Title = i.ToString(), Href = Model.UrlTmpl + i.ToString(), IsActive = (Model.PageNum == i) } });
                    }
                    else
                    {
                        continue;
                    }
                }
            }
            else
            {
                @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Numb, Title = i.ToString(), Href = Model.UrlTmpl + i.ToString(), IsActive = (Model.PageNum == i) } });
            }
        }
        @await Component.InvokeAsync(nameof(PaginationButton), new { buttonSet = new PaginationButtonModel() { TypeButton = PaginationButtonModel.TypesButton.Next, Title = "Вперёд", Href = (Model.PageNum >= Model.CountPages ? string.Empty : Model.UrlTmpl + (Model.PageNum + 1).ToString()) } })
    </ul>
</nav>
